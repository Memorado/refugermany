<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Welcome Guide" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WelcomeGuide.WelcomePage">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="20, 40, 20, 20" Android="20, 20, 20, 20" WinPhone="20, 20, 20, 20" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="15">
			<Label Text="Welcome" />
			<Image Source="welcome_image.png" />
			<Button Text="Continue" Clicked="OnContinueClicked" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>